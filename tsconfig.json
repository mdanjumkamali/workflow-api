{
  "compilerOptions": {
    "target": "es2016" /* Set the JavaScript language version. */,
    "module": "commonjs" /* Specify the module code generation. */,
    "rootDir": "./" /* Specify the root folder for source files. */,
    "outDir": "./dist" /* Specify the output folder for compiled files. */,
    "esModuleInterop": true /* Enables compatibility with CommonJS modules. */,
    "forceConsistentCasingInFileNames": true /* Ensure consistent casing in file names. */,
    "strict": true /* Enable all strict type-checking options. */,
    "skipLibCheck": true /* Skip type checking of declaration files. */
  },
  "include": [
    "**/**/*.ts"
  ] /* Include all TypeScript files in the src folder. */,
  "exclude": [
    "node_modules"
  ] /* Exclude node_modules directory from compilation. */
}
